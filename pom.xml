-->

        <dependency>
            <groupId>org.contentmine</groupId>
            <artifactId>svghtml</artifactId>
            <version>${svghtml.version}</version>
        </dependency>
        
        <dependency>
            <groupId>org.bouncycastle</groupId>
            <artifactId>bcprov-jdk16</artifactId>
            <version>${bcprov-jdk16.version}</version>
        </dependency>

    </dependencies>

    <build>
        <plugins>
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>appassembler-maven-plugin</artifactId>
                <version>1.8.1</version>
                <configuration>
                    <programs>
                    <!-- probably fails -->
                        <program>
                            <mainClass>org.xmlcml.svg2xml.PDFAnalyzer</mainClass>
                            <id>pdf2xml</id>
                        </program>
                        <program>
                            <mainClass>org.xmlcml.pdf2svg.PDF2SVGConverter</mainClass>
                            <id>pdf2svg</id>
                        </program>

                    </programs>

                    <!-- Prevent long directories -->
                    <repositoryLayout>flat</repositoryLayout>

                </configuration>

                <executions>
                    <execution>
                        <id>assembly</id>
                        <phase>package</phase>
                        <goals>
                            <goal>assemble</goal>
                        </goals>
                    </execution>
                </executions>

            </plugin>

